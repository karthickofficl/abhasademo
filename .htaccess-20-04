RewriteEngine on
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}\.php -f
RewriteRule ^([^/]+)/$ $1.php
RewriteRule ^deaddiction/(.*)/$ deaddiction/$1.php
RewriteRule ^depression/(.*)/$ depression/$1.php
RewriteRule ^articles/(.*)/$ articles/$1.php
RewriteRule ^best-nasha-mukti-kendra/(.*)/$ locationsarea/$1.php

RewriteCond %{THE_REQUEST} ^[A-Z]+\ /([^/]+/)*[^.]+\.php(\?[^\ ]*)?\ HTTP/
# RewriteRule ^(([^/]+/)*[^.]+)\.php$ https://abhasa.in/$1 [R=301,L]

RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_URI} !(\.[a-zA-Z0-9]{1,5}|/)$
RewriteRule (.*)$ https://abhasa.in/$1/ [R=301,L]

ErrorDocument 404 https://abhasa.in/404/


        <ifmodule mod_deflate.c>
        AddOutputFilterByType DEFLATE text/text text/html text/plain text/xml text/css text/javascript text/x-javascript  image/icon image/jpg image/jpeg image/png image/x-icon application/x-javascript application/javascript
        </ifmodule>


 <ifmodule mod_expires.c>
        ExpiresActive On
ExpiresDefault "access 1 month"
        </ifmodule>



